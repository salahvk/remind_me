<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="primary">#103E64</color>
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <!-- Theme applied to the Android Window as soon as the process has started.
         This theme determines the color of the Android Window while your
         Flutter UI initializes, as well as behind your Flutter UI while its
         running.

         This Theme is only used starting with V2 of Flutter's Android embedding. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="CustomDatePickerDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Change header background color -->
        <item name="colorPrimary">#103E64</item>
        <item name="colorAccent">#103E64</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>

    <!-- Button Style -->
    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#103E64</item>
    </style>

    <style name="CustomTimePickerDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Header color -->
        <item name="colorPrimary">#103E64</item>
        <item name="colorAccent">#103E64</item>

        <!-- Button style -->
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerButtonStyle</item>
    </style>

    <style name="TimePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">#103E64</item>
    </style>


</resources>